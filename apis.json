      },
      {
        "path": "/leakage",
        "method": "post",
        "json_key": "dataset_id",
        "json_payload": {"dataset_id": "<dataset_id>", "threshold": 0.8},
        "required": true
      },
      {
        "path": "/features",
        "method": "post",
        "json_key": "dataset_id",
        "json_payload": {"dataset_id": "<dataset_id>", "feature_types": ["categorical", "numeric"]},
        "required": true
      }
    ]
  }
