      "required": false
    }
  },
  {
    "name": "data-preparation-api",
    "repo": "https://github.com/aerhedai/data-preparation-api",
    "path": "data-preparation-api",
    "port": 8004,
    "internal_port": 8080,
    "test_endpoints": [
      {
        "path": "/impute",
        "method": "post",
